# Telegram Forward Bot - Environment Variables Example
# Copy this file to .env and fill in your values

# Required: Telegram API Credentials
# Get these from https://my.telegram.org
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Required: Bot Token
# Get this from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# Optional: Database Configuration
DATABASE_PATH=bot_database.db
DATABASE_URL=sqlite:///bot_database.db

# Optional: Performance Settings
DELAY_BETWEEN_MESSAGES=1.0
MAX_RETRIES=3
FLOOD_PROTECT=true

# Optional: Status Update Settings
STATUS_UPDATE_INTERVAL=5
PROGRESS_SAVE_INTERVAL=10
SESSION_SAVE_INTERVAL=10

# Optional: File Handling
MAX_FILE_SIZE_MB=2048
CHUNK_SIZE=1048576

# Optional: Session Management
AUTO_RECONNECT=true

# Optional: Logging
LOG_LEVEL=INFO

# Optional: Status Message Settings
# These will be set automatically by the bot
# STATUS_MESSAGE_ID=
# STATUS_CHAT_ID=

# Render-specific settings (for deployment)
# PORT=8080  # Render provides this automatically
